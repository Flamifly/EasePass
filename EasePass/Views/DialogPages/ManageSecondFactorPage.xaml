<Page
    x:Class="EasePass.Views.ManageSecondFactorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Controls="using:EasePass.Controls"
    xmlns:controls="using:EasePass.Controls" xmlns:models="using:EasePass.Models"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Margin="0,10,0,0" x:Uid="View_ManageSecondFactorPage_EnableSecondFactor" Text="Enable SecondFactor" />
        <ToggleSwitch x:Name="enableSecondFactor" Toggled="enableSecondFactor_Toggled" ToolTipService.ToolTip="Enables the SecondFactor for the Database"/>
        <TextBlock Margin="0,10,0,0" x:Uid="View_ManageSecondFactorPage_SecondFactorType" Text="SecondFactor Type" />
        <ComboBox x:Name="secondFactorTypeTB" HorizontalAlignment="Stretch" SelectedItem="Token" IsEnabled="False">
            <x:String>Token</x:String>
            <x:String>OTP</x:String>
        </ComboBox>
        <TextBlock Margin="0,10,0,0" x:Uid="View_ManageSecondFactorPage_SecondFactorToken" Text="SecondFactor Token"/>
        <Controls:EditPasswordBox x:Name="secondFactorToken" Password="" IsEnabled="False"/>
    </StackPanel>
</Page>
